.container{
    padding: 20rpx;
}
.question-block{
    width: 100%;
    display: flex;
    /*justify-content: flex-start;*/
    align-items: center;
}
.uploader-image image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.title{
    font-size: 32rpx;
    color: #007aff;
    margin-left: 20px;
}
.draw-block{
    width: 100%;
    height: 600rpx;
    background-color: #f6f6f6;
}
.brush-thickness-container{
    width:100%;
    height:70rpx;
    display:flex;
    flex-direction:row;
    justify-content:flex-start;
    align-content:center;
}
.brush-thickness-container .brush-title{
    margin-left:25rpx;
    font-size:0.75em;
    color:gray;
    white-space: nowrap;
}
.brush-thickness-block{
    width: 50%;
    padding-top: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.brush-point{
    width: 52rpx;
    height: 65rpx;
}

canvas {
    background: #f8f8f8;
    width: 100%;
    height: 100%;
    border: 1rpx solid #ebebeb;
    border-radius: 3rpx;
}
.brush-color-block{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.brush-color-block scroll-view{
    width:90%;
    height:90rpx;
    display:flex;
    flex-direction:row;
    white-space:nowrap;
    align-content:flex-end;
}
.brush-color-block scroll-view .color-box{
    display: inline-block;
    width: 60rpx;
    height: 100%;
    margin: 0 10rpx 0 10rpx;
}
.utils-block{
    width: 60%;
    display: flex;
    justify-content: space-between;
    color: #0063ce;
    font-size: 32rpx;
    margin-top: 20rpx;
}

